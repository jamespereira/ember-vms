<h1>Signin</h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Company:</label>
    <div class="col-sm-10">
      {{input type="text" value=model.company class="form-control" placeholder="Your Company"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name:</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="Your full name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email:</label>
    <div class="col-sm-10">
      {{input type="text" value=model.email class="form-control" placeholder="Your email address"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Visiting Who:</label>
    <div class="col-sm-10">
      {{input type="text" value=model.who class="form-control" placeholder="Who are you visiting"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" disabled={{model.isNotValid}} {{action 'saveVisit' model}}>Continue</button>
    </div>
  </div>
</div>
